<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F9F8"
    >

    <!-- Encabezado -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2ECC71"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comunidad"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium" />



    </LinearLayout>
    <!-- Barra de bÃºsqueda -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:padding="4dp"
        >

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Buscar"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btnBuscar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_search"

            android:contentDescription="Buscar" />

    </LinearLayout>

    <!-- Spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#34495E"
            android:spinnerMode="dropdown" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerComunidades"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />


    </LinearLayout>







    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/reportes"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/reporte"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:text="Reportes"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/alarma"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/alarma"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="Alarma"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/comunidad"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="Comunidad"
                android:textSize="12sp"
                android:textColor="#2ECC71"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/cuenta"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/perfil"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="Cuenta"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
