<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportes_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- HEADER verde con bordes redondeados arriba -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:background="@drawable/header_bg"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportes"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Contenido principal: usar ScrollView para que sea responsivo -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="18dp"
            android:paddingBottom="24dp">

            <!-- Título Historial -->
            <TextView
                android:id="@+id/tv_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historial"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4d738e"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Contenedor de la tarjeta que tendrá el RecyclerView (vacío por ahora) -->
            <LinearLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@drawable/card_bg"
                android:elevation="4dp">

                <!-- Aquí irá el RecyclerView conectado a la BD (por ahora vacío).
                     Cuando conectes la BD, cambia este LinearLayout por un RecyclerView
                     con id recyclerReports -->
                <TextView
                    android:id="@+id/placeholder_historial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="(Historial de reportes: falta conectar la base de datos!!!!)"
                    android:textColor="#9aa4a6"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Espacio -->
            <View
                android:layout_width="match_parent"
                android:layout_height="22dp"/>

            <!-- Botón grande con + -->
            <FrameLayout
                android:id="@+id/btn_add_report"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/plus_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="48sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV (fija) -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Item 1 seleccionado -->
        <LinearLayout
            android:id="@+id/item_reportes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/reporte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reportes"
                android:textSize="12sp"
                android:textColor="#0AAD76"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:id="@+id/item_alarma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/alarma" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarma"
                android:textSize="12sp"
                android:textColor="#9aa4a6"/>
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:id="@+id/item_comunidad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/comunidad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comunidad"
                android:textSize="12sp"
                android:textColor="#9aa4a6"/>
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:id="@+id/item_cuenta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta"
                android:textSize="12sp"
                android:textColor="#9aa4a6"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
