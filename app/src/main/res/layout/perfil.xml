<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".Perfil">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:background="@drawable/header_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="30sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/ftoperfil"
        android:src="@drawable/perfil"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nusuario"
        android:textAlignment="center"
        android:text="NOMBRE DEL USUARIO"
        android:layout_marginTop="1dp"
        android:textColor="#072AFB"
        android:textSize="17dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tusuario"
        android:textAlignment="center"
        android:text="TELÉFONO DEL USUARIO"
        android:layout_marginTop="1dp"
        android:textColor="#072AFB"
        android:textSize="17dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domicilio:"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:padding="16dp"
        android:textColor="#556A4F"
        />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comunidades A Las Que Pertenezco:"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:padding="16dp"
        android:textColor="#556A4F"
        />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background"
        />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnconfigurar"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="CONFIGURAR CUENTA"
        android:textSize="17dp"
        />

    <!-- MENÚ INFERIOR -->
    <LinearLayout
        android:id="@+id/bottom_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="70dp">

        <!-- Reportes -->
        <LinearLayout
            android:id="@+id/btn_menu_reports"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/reporte"
                app:tint="#757575"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reportes"
                android:textSize="10sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Alarma -->
        <LinearLayout
            android:id="@+id/btn_menu_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/alarma"
                app:tint="#4CAF50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alarma"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </LinearLayout>

        <!-- Comunidad -->
        <LinearLayout
            android:id="@+id/btn_menu_community"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/comunidad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comunidad"
                android:textSize="10sp"
                android:textColor="#757575"/>
        </LinearLayout>

        <!-- Cuenta -->
        <LinearLayout
            android:id="@+id/btn_menu_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/perfil"
                app:tint="#757575"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta"
                android:textSize="10sp"
                android:textColor="#757575"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>